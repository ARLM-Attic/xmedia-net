<Window x:Class="WPFXMPPClient.AddNewRosterItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Buddy" Height="178" Width="300">


    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Width="100">Contact ID (JID)</Label>
            <TextBox Width="150" x:Name="TextBoxJID"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="100">Nickname</Label>
            <TextBox Width="150" x:Name="TextBoxNickname" ></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="100">Group</Label>
            <TextBox Width="150" x:Name="TextBoxGroup" >Friends</TextBox>
        </StackPanel>

        <Button Style="{DynamicResource ButtonSurface}" HorizontalAlignment="Right" IsDefault="True" Click="SurfaceButton_Click">Add Buddy</Button>
    </StackPanel>
</Window>
