<Window x:Class="WPFXMPPClient.VCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update vCard" Height="270" Width="300" Loaded="Window_Loaded">


    <StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Width="120">Full Name</Label>
            <TextBox Width="120" Text="{Binding Name.GivenName}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="120">Nick Name</Label>
            <TextBox Width="120" Text="{Binding NickName}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="120">Group</Label>
            <TextBox Width="120" x:Name="TextBoxGroup" Text="{Binding Group}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="120">Picture</Label>
            <Border BorderBrush="Red">
                <Image Source="Avatars/avatar.png" Height="120" Width="120" Stretch="Fill" x:Name="ImagePicture" MouseDown="ImagePicture_MouseDown" />
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ButtonYes" Margin="10,0"  Width="60" IsDefault="True" Click="ButtonYes_Click">OK</Button>
        </StackPanel>

    </StackPanel>

</Window>
